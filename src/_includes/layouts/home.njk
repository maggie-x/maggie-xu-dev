---
layout: layouts/base.njk
templateClass: tmpl-home
---
{%- from "components/languages.njk" import languages -%}
{%- from "components/language.njk" import language -%}
{%- from "components/professional-history/role.njk" import role -%}
{%- from "components/currentlyReading.njk" import currentlyReading -%}

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="pb-48 content space-y-4">
    {{ content | safe }}

    <div>
      <h3>Toolbox</h3>
      {{languages()}}
    </div>
    <div>
      <h3>Currently Studying</h3>
      {{currentlyReading()}}
    </div>
    {# After the the content defined in index.md, list the blog posts in the collection #}

    <div>
      <h3>Posts</h3>
      <ul>
        {%- for post in collections.posts -%}
          <li class="list-none" {% if page.url == post.url %} aria-current="page"{% endif %}>{{ post.data.page.date | htmlDateString }} — <a href='{{ post.url }}'>{{ post.data.title }}</a>
          </li>
        {%- endfor -%}
        <li class="list-none">
          <a href="/posts">View all posts</a>
        </li>
      </ul>
    </div>
  </div>
</div>